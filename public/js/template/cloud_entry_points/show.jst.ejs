<div class="container">
  <%
    var breadcrumb = [];
    breadcrumb.push({ url: "#cloud_entry_points", label: i18n.t("cloud_entry_point.index.cloud_entry_point_list")});
    breadcrumb.push({ url: "#cloud_entry_points/" + id, label: name});
  %>
  <%= this.partial('common/menu', { breadcrumb: breadcrumb })%>
  <!-- テーブル一覧 -->
  <h2 id="tables-hover-rows" data-i18n="cloud_entry_point.show.cloud_entry_point_detail">クラウドエントリーポイント詳細</h2>
  <%= this.partial('common/error') %>
  <table class="table table-hover">
    <tbody>
      <tr>
        <td data-i18n="cloud_entry_point.show.cloud_entry_point_id">クラウドエントリーポイントID</td>
        <td><%= id %></td>
      </tr>
        <td data-i18n="cloud_entry_point.show.infrastructure_name">基盤名</td>
        <td><%- infrastructure.name %></td>
      </tr>
      </tr>
        <td data-i18n="cloud_entry_point.show.entry_point">エントリーポイント</td>
        <td><%- entry_point %></td>
      </tr>
      <tr>
        <td data-i18n="cloud_entry_point.show.cloud_entry_point_name">クラウドエントリーポイント名</td>
        <td><%- name %></td>
      </tr>
      <% if(infrastructure.driver === 'ec2') { %>
        <tr>
          <td data-i18n="cloud_entry_point.show.key">アクセスキー</td>
          <td><%- key %></td>
        </tr>
        <tr>
          <td data-i18n="cloud_entry_point.show.secret_key">シークレットキー</td>
          <td><% if(secret) {%>********<% } else {} %></td>
        </tr>
      <% } else if(infrastructure.driver === 'openstack') { %>
        <tr>
          <td data-i18n="cloud_entry_point.show.tenant">テナント名</td>
          <td><%- tenant %></td>
        </tr>
        <tr>
          <td data-i18n="cloud_entry_point.show.user">ユーザ</td>
          <td><%- user %></td>
        </tr>
        <tr>
          <td data-i18n="cloud_entry_point.show.password">パスワード</td>
          <td><% if(secret) {%>********<% } else {} %></td>
        </tr>
      <% } %>
      <tr>
        <td data-i18n="cloud_entry_point.show.proxy_url">プロキシURL</td>
        <td><%= proxy_url %></td>
      </tr>
      <tr>
        <td data-i18n="cloud_entry_point.show.proxy_user_name">プロキシユーザー名</td>
        <td><%= proxy_user %></td>
      </tr>
      <tr>
        <td data-i18n="cloud_entry_point.show.proxy_password">プロキシパスワード</td>
        <td><% if(proxy_password) {%>********<% } else {} %></td>
      </tr>
      <tr>
        <td data-i18n="cloud_entry_point.show.no_proxy">プロキシ除外リスト</td>
        <td><%= no_proxy %></td>
      </tr>
    </tbody>
  </table>
  <p align="right">
    <a class="btn btn-primary btn-default" href="#cloud_entry_points/<%= id %>/edit" data-i18n="common.button.edit">編集</a>
    <a id="delete" class="btn btn-danger btn-default" href="javascript:void(0)" data-i18n="common.button.delete">削除</a>
    <a class="btn btn-default" href="#cloud_entry_points" data-i18n="common.button.back">戻る</a>
  </p>
  <%= this.partial('common/footer')%>
</div>
