<div class="scrollable">
  <table class="table table-hover table-bordered index-table table-condensed">
    <thead>
      <tr>
        <th class="infrastructure">Infrastructure</th>
        <th class="cloud-entry-point">Cloud Entry Point</th>
      </tr>
    </thead>
    <tbody style="height: 100px; overflow-y: scroll;">
      <%
        for(var i = 0; i < collection.length; i++) {
          var infrastructure = collection[i].infrastructure;
      %>
      <tr data-id="<%- infrastructure.cid %>">
        <td class="infrastructure"><%- infrastructure.get('name') %></td>
        <td class="cloud-entry-point">
          <select>
          <%
          _.each(cloud_entry_points.models, function(model) {
          %>
          <option value="<%- model.get('id') %>"><%- model.get('name') %></option>
          <%
          });
          %>
          </select>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>

