<div class="scrollable">
  <table class="table table-bordered index-table table-condensed">
    <thead>
      <tr>
        <th class="id">ID</th>
        <th class="destination">Destination</th>
        <th class="target">Target</th>
        <th class="delete">Delete</th>
      </tr>
    </thead>
    <tbody>
      <%
        var routes = get('routes');
        for(var i = 0; i < routes.length; i++) {
          var route = routes[i];
      %>
      <tr>
        <td class="id"><input type="text" name="id" value="<%- route.id %>" placeholder="ID"></td>
        <td class="destination">
          <select name="destination">
            <option value="<%- App.Components.Routing.RoutingKeywordsType.all %>"><%- App.Components.Routing.RoutingKeywordsType.all %></option>
            <% for(var j = 0; j < this.networks.length; j++) { %>
            <option value="<%- this.networks[j].value %>"><%- this.networks[j].text %></option>
            <% } %>
          </select>
        </td>
        <td class="target">
          <select name="target">
            <option value="<%- App.Components.Routing.RoutingKeywordsType.InternetGateway %>"><%- App.Components.Routing.RoutingKeywordsType.InternetGateway %></option>
            <% for(var j = 0; j < this.networks.length; j++) { %>
            <option value="<%- this.networks[j].value %>"><%- this.networks[j].text %></option>
            <% } %>
          </select>
        </td>
        <td class="delete">
          <% if(!this.options.readonly) { %>
          <span class="button glyphicon glyphicon-remove"></span>
          <% } %>
        </td>
      </tr>
      <% } %>

      <% if(!this.options.readonly) { %>
      <%= this.partial('editors/_routing_new') %>
      <% } %>
    </tbody>
  </table>
</div>

